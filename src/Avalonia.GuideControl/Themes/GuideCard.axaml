<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:controls="using:Avalonia.GuideControl.Controls">

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Avalonia.GuideControl/Themes/CardResource.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <Style Selector="controls|GuideCard">
        <Setter Property="Background" Value="{DynamicResource GuideCardBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GuideCardBorderBrush}" />
        <Setter Property="BorderThickness" Value="{DynamicResource GuideCardBorderThickness}" />
        <Setter Property="CornerRadius" Value="{DynamicResource GuideCardCornerRadius}" />
        <Setter Property="Padding" Value="{DynamicResource GuideCardPadding}" />
        <Setter Property="MinWidth" Value="{DynamicResource GuideCardMinWidth}" />
        <Setter Property="MaxWidth" Value="{DynamicResource GuideCardMaxWidth}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="{TemplateBinding CornerRadius}">
                    <Grid RowDefinitions="Auto * Auto" RowSpacing="5">
                        <Grid Grid.Row="0" ColumnDefinitions="* Auto" ColumnSpacing="5">
                            <TextBlock
                                Name="PART_Header"
                                Grid.Column="0"
                                FontSize="{DynamicResource GuideCardTitleFontSize}"
                                FontWeight="{DynamicResource GuideCardTitleFontWeight}"
                                Foreground="{DynamicResource GuideCardTitleForegroundBrush}"
                                IsVisible="{TemplateBinding Header,
                                                            Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Text="{TemplateBinding Header}"
                                TextWrapping="Wrap" />

                            <TextBlock
                                Name="PART_Tips"
                                Grid.Column="1"
                                MaxWidth="{DynamicResource GuideCardTipsMaxWidth}"
                                FontSize="{DynamicResource GuideCardTipsFontSize}"
                                Foreground="{DynamicResource GuideCardTipsForegroundBrush}"
                                IsVisible="{TemplateBinding Tips,
                                                            Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                Opacity="{DynamicResource GuideCardTipsOpacity}"
                                Text="{TemplateBinding Tips}"
                                TextWrapping="Wrap" />
                        </Grid>
                        <TextBlock
                            Name="PART_Content"
                            Grid.Row="1"
                            FontSize="{DynamicResource GuideCardContentFontSize}"
                            FontWeight="{DynamicResource GuideCardContentFontWeight}"
                            Foreground="{DynamicResource GuideCardForegroundBrush}"
                            IsVisible="{TemplateBinding Text,
                                                        Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            Text="{TemplateBinding Text}"
                            TextWrapping="Wrap" />

                        <Grid Grid.Row="2" ColumnDefinitions="Auto * Auto">
                            <Button Name="PART_PreviousButton" Grid.Column="0" HorizontalAlignment="Left" Content="{TemplateBinding PreviousButtonText}" IsVisible="{TemplateBinding IsPreviousButtonVisible}" />
                            <Button Name="PART_SkipButton" Grid.Column="1" HorizontalAlignment="Center" Content="{TemplateBinding SkipButtonText}" IsVisible="{TemplateBinding IsSkipButtonVisible}" />
                            <Button Name="PART_NextButton" Grid.Column="2" HorizontalAlignment="Right" Content="{TemplateBinding NextButtonText}" IsVisible="{TemplateBinding IsNextButtonVisible}" />

                        </Grid>
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <!--  Classic 样式 - 基于默认模板，仅修改背景和前景色  -->
    <Style Selector="controls|GuideCard.classic">
        <Setter Property="Background" Value="#CC000000" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!--  Classic 样式中的文本元素前景色设置  -->
    <Style Selector="controls|GuideCard.classic /template/ TextBlock">
        <Setter Property="Foreground" Value="White" />
    </Style>

    <!--  Classic 样式中的按钮前景色设置  -->
    <Style Selector="controls|GuideCard.classic /template/ Button">
        <Setter Property="Foreground" Value="White" />
    </Style>

</Styles>